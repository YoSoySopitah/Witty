    <script src="js/jsCuenta.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.querySelector('#registerForm');
            const password = document.getElementById('rcontraseña');
            const confirmPassword = document.getElementById('confirm-password');
            const errorMessage = document.createElement('div');
            const header = document.getElementById('mainHeader');
    
            errorMessage.style.color = 'red';
            errorMessage.style.display = 'none';
            errorMessage.style.marginTop = '5px';
            errorMessage.style.fontSize = '0.8em';
            errorMessage.innerHTML = '<img src="img/Advertencia.png" alt="" style="vertical-align: middle; width: 20px; height: 20px; margin-right: 5px;"> Las contraseñas no coinciden.';
            confirmPassword.parentNode.insertBefore(errorMessage, confirmPassword.nextSibling);
    
            form.addEventListener('submit', (event) => {
                event.preventDefault(); // Previene el envío del formulario
    
                if (password.value !== confirmPassword.value) {
                    errorMessage.style.display = 'block'; // Muestra el mensaje de error
                } else {
                    errorMessage.style.display = 'none'; // Oculta el mensaje de error
    
                    // Cambiar el archivo CSS al enviar el formulario de registro
                    document.getElementById('cssLink').href = 'css/cssCuenta.css';
    
                    // Oculta el encabezado y el formulario de registro
                    header.classList.add('hidden');
                    document.getElementById('registerSection').classList.add('hidden');
                    document.getElementById('userFormSection').classList.remove('hidden');
                }
            });
    
            confirmPassword.addEventListener('input', () => {
                if (password.value === confirmPassword.value) {
                    errorMessage.style.display = 'none';
                }
            });
        });
    
        document.getElementById('toggle-password').addEventListener('change', function() {
            const passwordField = document.getElementById('confirm-password');
            passwordField.type = this.checked ? 'text' : 'password';
        });

        // Mostrar u ocultar campos adicionales basados en el tipo de usuario seleccionado
        document.getElementById('tipoUsuario').addEventListener('change', function() {
            const asesorFields = document.getElementById('asesorFields');
            asesorFields.style.display = this.value === 'asesor' ? 'block' : 'none';
        });

        // Manejo del formulario de nombre
        document.getElementById('nombreForm').addEventListener('submit', (event) => {
            event.preventDefault();
            // Aquí se pueden agregar validaciones adicionales y lógica para enviar los datos al servidor
            // Por ejemplo, podrías usar fetch() o XMLHttpRequest para enviar los datos al backend

            // Para simular el proceso, ocultamos el formulario actual y mostramos el siguiente
            document.getElementById('nameSection').classList.add('hidden');
            document.getElementById('userTypeSection').classList.remove('hidden');
        });

        // Manejo del tipo de usuario
        document.getElementById('asesorBtn').addEventListener('click', () => {
            document.getElementById('userTypeSection').classList.add('hidden');
            document.getElementById('section3').classList.remove('hidden');
        });

        document.getElementById('asesoradoBtn').addEventListener('click', () => {
            document.getElementById('userTypeSection').classList.add('hidden');
            document.getElementById('section3').classList.remove('hidden');
        });

        // Manejo del texto de presentación
        document.getElementById('presentationText').addEventListener('input', () => {
            // Validar el texto de presentación si es necesario
        });

        // Manejo de la carga de fotos
        document.getElementById('uploadButton').addEventListener('click', () => {
            document.getElementById('photoUpload').click();
        });

        document.getElementById('photoUpload').addEventListener('change', (event) => {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = () => {
                    document.getElementById('avatarPreview').src = reader.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // Crear usuario
        document.getElementById('createUserBtn').addEventListener('click', () => {
    // Lógica para enviar los datos al backend
    const formData = new FormData(document.querySelector('#nombreForm'));

    fetch('/register', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        alert('Usuario creado exitosamente');
        // Redirigir o hacer otras acciones según sea necesario
    })
    .catch(error => {
        console.error('Error al crear el usuario:', error);
    });
});

    </script>
